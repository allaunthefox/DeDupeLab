{
  "$schema": "file://./deduplab_meta_v4.schema.json",
  "$id": "file://./deduplab_meta_v4.schema.json",
  "title": "Deduplab Meta v4 Folder Manifest",
  "description": "Metadata manifest including context tags for archive-aware hashing.",
  "type": "object",
  "required": [
    "spec",
    "generated_at",
    "folder_rel",
    "summary",
    "entries"
  ],
  "properties": {
    "spec": {
      "const": "deduplab_meta_v4"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "folder_rel": {
      "type": "string"
    },
    "parent_rel": {
      "type": [
        "string",
        "null"
      ]
    },
    "summary": {
      "type": "object",
      "required": [
        "files_total",
        "bytes_total",
        "categories"
      ],
      "properties": {
        "files_total": {
          "type": "integer",
          "minimum": 0
        },
        "bytes_total": {
          "type": "integer",
          "minimum": 0
        },
        "categories": {
          "type": "object",
          "patternProperties": {
            "^[A-Za-z0-9_-]+$": {
              "type": "integer",
              "minimum": 0
            }
          },
          "additionalProperties": false
        },
        "topics": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        }
      },
      "additionalProperties": false
    },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "size",
          "sha256",
          "mime",
          "category"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "size": {
            "type": "integer",
            "minimum": 0
          },
          "mtime": {
            "type": "integer",
            "minimum": 0
          },
          "sha256": {
            "type": "string",
            "pattern": "^[A-Fa-f0-9]{64}$"
          },
          "mime": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "subtype": {
            "type": "string"
          },
          "topic": {
            "type": "string"
          },
          "context_tag": {
            "type": "string",
            "enum": [
              "archived",
              "unarchived"
            ]
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
